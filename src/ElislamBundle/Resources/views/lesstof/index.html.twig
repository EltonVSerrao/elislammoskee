{% extends '@Elislam/Default/base.html.twig' %}

{% block body %}
    <h1>Lesstofs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Lesid</th>
                <th>Filename</th>
                <th>Datetime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lesstof in lesstofs %}
            <tr>
                <td><a href="{{ path('lesstof_show', { 'id': lesstof.id }) }}">{{ lesstof.id }}</a></td>
                <td>{{ lesstof.lesid }}</td>
                <td>{{ lesstof.filename }}</td>
                <td>{{ lesstof.datetime }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('lesstof_show', { 'id': lesstof.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('lesstof_edit', { 'id': lesstof.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lesstof_new') }}">Create a new lesstof</a>
        </li>
    </ul>
{% endblock %}
