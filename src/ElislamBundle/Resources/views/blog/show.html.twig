{% extends '@Elislam/Default/base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('bundles/elislam/css/sub.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="container-fluid col-9">
        <h1 class="text-center text-white">Blog </h1>
        <table class="table table-striped table-dark table-bordered table-responsive">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ blog.text }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ blog.images }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ blog.categorieId }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{% if blog.datetime %}{{ blog.datetime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ blog.naam }}</td>
            </tr>
            </tbody>
        </table>
        <button class="btn btn-success space_box float-left btn-space"><a href="{{ path('blog_index') }}"><span class="fa fa-chevron-circle-left" style="color: #FFFFFF;"> back to list</span></a></button>
        <button class="btn btn-success space_box float-left btn-space"><a href="{{ path('blog_edit', { 'id': blog.id }) }}"><span class="fa fa-edit" style="color: #FFFFFF;">edit blog</span></a></button>
        {{ form_start(delete_form) }}
        <button class="btn btn-success space_box" type="submit"><span class="fa fa-trash" style="color: #FFFFFF;"> Delete</span></button>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
