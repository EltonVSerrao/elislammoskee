{% extends '@Elislam/Default/base.html.twig' %}

{% block body %}
    <h1>Kind</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ kind.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ kind.userid }}</td>
            </tr>
            <tr>
                <th>Voornaam</th>
                <td>{{ kind.voornaam }}</td>
            </tr>
            <tr>
                <th>Tussenvoegsel</th>
                <td>{{ kind.tussenvoegsel }}</td>
            </tr>
            <tr>
                <th>Achternaam</th>
                <td>{{ kind.achternaam }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ kind.email }}</td>
            </tr>
            <tr>
                <th>Geboortedatum</th>
                <td>{% if kind.geboortedatum %}{{ kind.geboortedatum|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('kind_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('kind_edit', { 'id': kind.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
