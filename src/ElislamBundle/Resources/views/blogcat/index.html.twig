{% extends '@Elislam/Default/base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('bundles/elislam/css/sub.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="container-fluid col-9">
        <h1 class="text-center text-white">Blog Categories List</h1>
        <table class="table table-striped table-dark table-bordered table-responsive">
            <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>Shortwords</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for blogCat in blogCats %}
                <tr>
                    <td><a href="{{ path('blogcat_show', { 'id': blogCat.id }) }}">{{ blogCat.id }}</a></td>
                    <td>{{ blogCat.categorie }}</td>
                    <td>{{ blogCat.shortwords }}</td>
                    <td>
                        <a href="{{ path('blogcat_show', { 'id': blogCat.id }) }}" style="padding-left: 7px;"><span class="fa fa-eye"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <button class="btn btn-success space_box"><a href="{{ path('blogcat_new') }}"><span class="fa fa-plus" style="color: #FFFFFF;"> Create a new categorie</span></a></button>
    </div>
{% endblock %}
